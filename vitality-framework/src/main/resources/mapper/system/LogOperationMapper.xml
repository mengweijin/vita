<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.mengweijin.vitality.system.mapper.LogOperationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.github.mengweijin.vitality.system.domain.entity.LogOperation">
        <id column="ID" property="id" />
        <result column="URL" property="url" />
        <result column="REQUEST_ARGS" property="requestArgs" />
        <result column="REQUEST_BODY" property="requestBody" />
        <result column="HTTP_METHOD" property="httpMethod" />
        <result column="METHOD_NAME" property="methodName" />
        <result column="SUCCESS" property="success" />
        <result column="ERROR_MSG" property="errorMsg" />
        <result column="CREATE_BY" property="createBy" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="UPDATE_BY" property="updateBy" />
        <result column="UPDATE_TIME" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="BaseColumnList">
        URL,
        REQUEST_ARGS,
        REQUEST_BODY,
        HTTP_METHOD,
        METHOD_NAME,
        SUCCESS,
        ERROR_MSG,
        ID,
        CREATE_BY,
        CREATE_TIME,
        UPDATE_BY,
        UPDATE_TIME
    </sql>

    <!-- 通用查询条件 -->
    <sql id="WhereCondition">
        <where>
            <if test="url != null and url != ''">
                AND URL = #{url}
            </if>
            <if test="requestArgs != null and requestArgs != ''">
                AND REQUEST_ARGS = #{requestArgs}
            </if>
            <if test="requestBody != null and requestBody != ''">
                AND REQUEST_BODY = #{requestBody}
            </if>
            <if test="httpMethod != null and httpMethod != ''">
                AND HTTP_METHOD = #{httpMethod}
            </if>
            <if test="methodName != null and methodName != ''">
                AND METHOD_NAME = #{methodName}
            </if>
            <if test="success != null and success != ''">
                AND SUCCESS = #{success}
            </if>
            <if test="errorMsg != null and errorMsg != ''">
                AND ERROR_MSG = #{errorMsg}
            </if>
            <if test="id != null">
                AND ID = #{id}
            </if>
            <if test="createBy != null">
                AND CREATE_BY = #{createBy}
            </if>
            <if test="createTime != null">
                AND CREATE_TIME = #{createTime}
            </if>
            <if test="updateBy != null">
                AND UPDATE_BY = #{updateBy}
            </if>
            <if test="updateTime != null">
                AND UPDATE_TIME = #{updateTime}
            </if>
        </where>
    </sql>

</mapper>
