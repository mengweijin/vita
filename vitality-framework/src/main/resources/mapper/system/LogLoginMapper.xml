<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.mengweijin.system.mapper.LogLoginMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.github.mengweijin.system.domain.entity.LogLogin">
        <id column="ID" property="id" />
        <result column="USERNAME" property="username" />
        <result column="LOGIN_TYPE" property="loginType" />
        <result column="IP" property="ip" />
        <result column="IP_LOCATION" property="ipLocation" />
        <result column="BROWSER" property="browser" />
        <result column="PLATFORM" property="platform" />
        <result column="OS" property="os" />
        <result column="SUCCESS" property="success" />
        <result column="ERROR_MSG" property="errorMsg" />
        <result column="CREATE_BY" property="createBy" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="UPDATE_BY" property="updateBy" />
        <result column="UPDATE_TIME" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="BaseColumnList">
        USERNAME,
        LOGIN_TYPE,
        IP,
        IP_LOCATION,
        BROWSER,
        PLATFORM,
        OS,
        SUCCESS,
        ERROR_MSG,
        ID,
        CREATE_BY,
        CREATE_TIME,
        UPDATE_BY,
        UPDATE_TIME
    </sql>

    <!-- 通用查询条件 -->
    <sql id="WhereCondition">
        <where>
            <if test="username != null and username != ''">
                AND USERNAME = #{username}
            </if>
            <if test="loginType != null and loginType != ''">
                AND LOGIN_TYPE = #{loginType}
            </if>
            <if test="ip != null and ip != ''">
                AND IP = #{ip}
            </if>
            <if test="ipLocation != null and ipLocation != ''">
                AND IP_LOCATION = #{ipLocation}
            </if>
            <if test="browser != null and browser != ''">
                AND BROWSER = #{browser}
            </if>
            <if test="platform != null and platform != ''">
                AND PLATFORM = #{platform}
            </if>
            <if test="os != null and os != ''">
                AND OS = #{os}
            </if>
            <if test="success != null and success != ''">
                AND SUCCESS = #{success}
            </if>
            <if test="errorMsg != null and errorMsg != ''">
                AND ERROR_MSG = #{errorMsg}
            </if>
            <if test="id != null">
                AND ID = #{id}
            </if>
            <if test="createBy != null">
                AND CREATE_BY = #{createBy}
            </if>
            <if test="createTime != null">
                AND CREATE_TIME = #{createTime}
            </if>
            <if test="updateBy != null">
                AND UPDATE_BY = #{updateBy}
            </if>
            <if test="updateTime != null">
                AND UPDATE_TIME = #{updateTime}
            </if>
        </where>
    </sql>

</mapper>
