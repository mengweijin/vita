<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.mengweijin.system.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.github.mengweijin.system.domain.entity.Menu">
        <id column="ID" property="id" />
        <result column="PARENT_ID" property="parentId" />
        <result column="TITLE" property="title" />
        <result column="TYPE" property="type" />
        <result column="PERMISSION" property="permission" />
        <result column="SEQ" property="seq" />
        <result column="ICON" property="icon" />
        <result column="URL" property="url" />
        <result column="DISABLED" property="disabled" />
        <result column="REMARK" property="remark" />
        <result column="CREATE_BY" property="createBy" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="UPDATE_BY" property="updateBy" />
        <result column="UPDATE_TIME" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="BaseColumnList">
        PARENT_ID,
        TITLE,
        TYPE,
        PERMISSION,
        SEQ,
        ICON,
        URL,
        DISABLED,
        REMARK,
        ID,
        CREATE_BY,
        CREATE_TIME,
        UPDATE_BY,
        UPDATE_TIME
    </sql>

    <!-- 通用查询条件 -->
    <sql id="WhereCondition">
        <where>
            <if test="parentId != null">
                AND PARENT_ID = #{parentId}
            </if>
            <if test="title != null and title != ''">
                AND TITLE = #{title}
            </if>
            <if test="type != null and type != ''">
                AND TYPE = #{type}
            </if>
            <if test="permission != null and permission != ''">
                AND PERMISSION = #{permission}
            </if>
            <if test="seq != null">
                AND SEQ = #{seq}
            </if>
            <if test="icon != null and icon != ''">
                AND ICON = #{icon}
            </if>
            <if test="url != null and url != ''">
                AND URL = #{url}
            </if>
            <if test="disabled != null and disabled != ''">
                AND DISABLED = #{disabled}
            </if>
            <if test="remark != null and remark != ''">
                AND REMARK = #{remark}
            </if>
            <if test="id != null">
                AND ID = #{id}
            </if>
            <if test="createBy != null">
                AND CREATE_BY = #{createBy}
            </if>
            <if test="createTime != null">
                AND CREATE_TIME = #{createTime}
            </if>
            <if test="updateBy != null">
                AND UPDATE_BY = #{updateBy}
            </if>
            <if test="updateTime != null">
                AND UPDATE_TIME = #{updateTime}
            </if>
        </where>
    </sql>

    <select id="selectPermissionListByUsername" resultType="java.lang.String">
        select distinct m.PERMISSION from VTL_MENU m
        INNER JOIN VTL_ROLE_MENU rm on rm.MENU_ID = m.ID
        WHERE m.DISABLED = 'N'
        AND rm.ROLE_ID IN (
            SELECT ur.ROLE_ID FROM VTL_USER_ROLE ur
            INNER JOIN VTL_USER u ON u.ID = ur.USER_ID
            INNER JOIN VTL_ROLE r ON r.ID = ur.ROLE_ID
            WHERE r.DISABLED = 'N'
            AND u.USERNAME = #{username}
        )
    </select>

</mapper>
