<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.mengweijin.vitality.system.mapper.VtlUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.github.mengweijin.vitality.system.entity.VtlUser">
        <result column="ID" property="id" />
        <result column="USERNAME" property="username" />
        <result column="PASSWORD" property="password" />
        <result column="NICKNAME" property="nickname" />
        <result column="GENDER" property="gender" />
        <result column="EMAIL" property="email" />
        <result column="MOBILE_PHONE" property="mobilePhone" />
        <result column="SECRET_KEY_2FA" property="secretKey2fa" />
        <result column="DISABLED" property="disabled" />
        <result column="DELETED" property="deleted" />
        <result column="CREATE_BY" property="createBy" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="UPDATE_BY" property="updateBy" />
        <result column="UPDATE_TIME" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="BaseColumn">
        t.ID,
        t.USERNAME,
        t.PASSWORD,
        t.NICKNAME,
        t.GENDER,
        t.EMAIL,
        t.MOBILE_PHONE,
        t.SECRET_KEY_2FA,
        t.DISABLED,
        t.DELETED,
        t.CREATE_BY,
        t.CREATE_TIME,
        t.UPDATE_BY,
        t.UPDATE_TIME
    </sql>

    <!-- 通用 Where 条件列 -->
    <sql id="BaseWhere">
        <where>
            <if test="p.id != null" >
                and t.ID = #{p.id}
            </if>
            <if test="p.username != null and p.username != '' ">
                and t.USERNAME = #{p.username}
            </if>
            <if test="p.password != null and p.password != '' ">
                and t.PASSWORD = #{p.password}
            </if>
            <if test="p.nickname != null and p.nickname != '' ">
                and t.NICKNAME = #{p.nickname}
            </if>
            <if test="p.gender != null and p.gender != '' ">
                and t.GENDER = #{p.gender}
            </if>
            <if test="p.email != null and p.email != '' ">
                and t.EMAIL = #{p.email}
            </if>
            <if test="p.mobilePhone != null and p.mobilePhone != '' ">
                and t.MOBILE_PHONE = #{p.mobilePhone}
            </if>
            <if test="p.secretKey2fa != null and p.secretKey2fa != '' ">
                and t.SECRET_KEY_2FA = #{p.secretKey2fa}
            </if>
            <if test="p.disabled != null" >
                and t.DISABLED = #{p.disabled}
            </if>
            <if test="p.deleted != null" >
                and t.DELETED = #{p.deleted}
            </if>
            <if test="p.createBy != null" >
                and t.CREATE_BY = #{p.createBy}
            </if>
            <if test="p.createTime != null" >
                and t.CREATE_TIME = #{p.createTime}
            </if>
            <if test="p.updateBy != null" >
                and t.UPDATE_BY = #{p.updateBy}
            </if>
            <if test="p.updateTime != null" >
                and t.UPDATE_TIME = #{p.updateTime}
            </if>
        </where>
    </sql>

    <!-- 通用 Where Like 条件列 -->
    <sql id="BaseWhereLike">
        <where>
            <if test="p.id != null" >
                and t.ID = #{p.id}
            </if>
            <if test="p.username != null and p.username != '' ">
                and t.USERNAME like concat(concat('%', #{p.username}), '%')
            </if>
            <if test="p.password != null and p.password != '' ">
                and t.PASSWORD like concat(concat('%', #{p.password}), '%')
            </if>
            <if test="p.nickname != null and p.nickname != '' ">
                and t.NICKNAME like concat(concat('%', #{p.nickname}), '%')
            </if>
            <if test="p.gender != null and p.gender != '' ">
                and t.GENDER like concat(concat('%', #{p.gender}), '%')
            </if>
            <if test="p.email != null and p.email != '' ">
                and t.EMAIL like concat(concat('%', #{p.email}), '%')
            </if>
            <if test="p.mobilePhone != null and p.mobilePhone != '' ">
                and t.MOBILE_PHONE like concat(concat('%', #{p.mobilePhone}), '%')
            </if>
            <if test="p.secretKey2fa != null and p.secretKey2fa != '' ">
                and t.SECRET_KEY_2FA like concat(concat('%', #{p.secretKey2fa}), '%')
            </if>
            <if test="p.disabled != null" >
                and t.DISABLED = #{p.disabled}
            </if>
            <if test="p.deleted != null" >
                and t.DELETED = #{p.deleted}
            </if>
            <if test="p.createBy != null" >
                and t.CREATE_BY = #{p.createBy}
            </if>
            <if test="p.createTime != null" >
                and t.CREATE_TIME = #{p.createTime}
            </if>
            <if test="p.updateBy != null" >
                and t.UPDATE_BY = #{p.updateBy}
            </if>
            <if test="p.updateTime != null" >
                and t.UPDATE_TIME = #{p.updateTime}
            </if>
        </where>
    </sql>

    <!-- 不查询密码  -->
    <select id="detailById" resultType="com.github.mengweijin.vitality.system.dto.VtlUserDTO">
        select
            t.ID,
            t.USERNAME,
            t.NICKNAME,
            t.GENDER,
            t.EMAIL,
            t.MOBILE_PHONE,
            t.SECRET_KEY_2FA,
            t.DISABLED,
            t.DELETED,
            t.CREATE_BY,
            t.CREATE_TIME,
            t.UPDATE_BY,
            t.UPDATE_TIME,
            cu.NICKNAME as create_by_name,
            uu.NICKNAME as update_by_name,
            up.PROFILE_PICTURE
        from VTL_USER t
        left join VTL_USER cu on cu.ID = t.CREATE_BY
        left join VTL_USER uu on uu.ID = t.UPDATE_BY
        left join VTL_USER_PROFILE up on up.ID = t.ID
        where t.ID = #{id}
    </select>

    <!-- 不查询密码  -->
    <select id="page" resultType="com.github.mengweijin.vitality.system.dto.VtlUserDTO">
        select
            t.ID,
            t.USERNAME,
            t.NICKNAME,
            t.GENDER,
            t.EMAIL,
            t.MOBILE_PHONE,
            t.SECRET_KEY_2FA,
            t.DISABLED,
            t.DELETED,
            t.CREATE_BY,
            t.CREATE_TIME,
            t.UPDATE_BY,
            t.UPDATE_TIME,
            cu.NICKNAME as create_by_name,
            uu.NICKNAME as update_by_name
        from VTL_USER t
        left join VTL_USER cu on cu.ID = t.CREATE_BY
        left join VTL_USER uu on uu.ID = t.UPDATE_BY
        <include refid="BaseWhereLike"/>
        order by t.CREATE_TIME desc
    </select>

</mapper>
