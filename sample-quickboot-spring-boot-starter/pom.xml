<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">  
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.7.2</version>
        <relativePath/>
    </parent>
    <artifactId>sample-quickboot-spring-boot-starter</artifactId>
    <name>sample-quickboot-spring-boot-starter</name>
    <description>Demo project for Spring Boot</description>  
    <properties> 
        <!-- 不上传此jar包到中央仓库或私服 -->  
        <maven.deploy.skip>true</maven.deploy.skip>  
        <!-- 跳过maven test，否则打包时耗时较久，开发时可以开启 -->  
        <skipTests>true</skipTests>
        <quickboot.version>1.1.0-SNAPSHOT</quickboot.version>
        <springdoc.version>1.6.9</springdoc.version>
    </properties>
    <dependencies>
        <dependency> 
            <groupId>com.github.mengweijin</groupId>  
            <artifactId>quickboot-spring-boot-starter</artifactId>
            <version>${quickboot.version}</version>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>  
            <artifactId>h2</artifactId>  
            <scope>runtime</scope> 
        </dependency>
        <dependency> 
            <groupId>org.springdoc</groupId>  
            <artifactId>springdoc-openapi-ui</artifactId>
            <version>${springdoc.version}</version>
        </dependency>  
        <dependency> 
            <groupId>org.springframework.boot</groupId>  
            <artifactId>spring-boot-starter-test</artifactId>  
            <scope>test</scope> 
        </dependency>
    </dependencies>  
    <build> 
        <plugins>
            <plugin> 
                <groupId>org.springframework.boot</groupId>  
                <artifactId>spring-boot-maven-plugin</artifactId>  
<!--                <version>${spring.boot.version}</version>  -->
                <executions> 
                    <execution> 
                        <goals> 
                            <!-- 将所有依赖包全部打到一个Jar包里面 -->  
                            <goal>repackage</goal> 
                        </goals> 
                    </execution> 
                </executions>  
                <configuration> 
                    <includeSystemScope>true</includeSystemScope> 
                </configuration> 
            </plugin> 
        </plugins>  
        <!-- 最终打出来的Jar的名称 -->  
        <!--<finalName>${project.artifactId}</finalName>--> 
    </build> 
</project>
