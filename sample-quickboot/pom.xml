<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">  
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.7.2</version>
        <relativePath/>
    </parent>
    <artifactId>sample-quickboot</artifactId>
    <name>sample-quickboot</name>
    <description>Demo project for Spring Boot</description>  
    <properties> 
        <!-- 不上传此jar包到中央仓库或私服 -->  
        <maven.deploy.skip>true</maven.deploy.skip>  
        <!-- 跳过maven test，否则打包时耗时较久，开发时可以开启 -->  
        <skipTests>true</skipTests>
        <quickboot-spring-boot-starter.version>1.1.1-SNAPSHOT</quickboot-spring-boot-starter.version>
        <quickboot-layui.version>1.1.0</quickboot-layui.version>
        <springdoc.version>1.6.9</springdoc.version>
        <generator-spring-boot-starter.version>1.0.0-SNAPSHOT</generator-spring-boot-starter.version>
    </properties>
    <dependencies>
        <dependency> 
            <groupId>com.github.mengweijin</groupId>  
            <artifactId>quickboot-spring-boot-starter</artifactId>
            <version>${quickboot-spring-boot-starter.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.mengweijin</groupId>
            <artifactId>quickboot-layui</artifactId>
            <version>${quickboot-layui.version}</version>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>  
            <artifactId>h2</artifactId>  
            <scope>runtime</scope> 
        </dependency>
        <dependency> 
            <groupId>org.springdoc</groupId>  
            <artifactId>springdoc-openapi-ui</artifactId>
            <version>${springdoc.version}</version>
        </dependency>  
        <dependency> 
            <groupId>org.springframework.boot</groupId>  
            <artifactId>spring-boot-starter-test</artifactId>  
            <scope>test</scope> 
        </dependency>
        <dependency>
            <groupId>com.github.mengweijin</groupId>
            <artifactId>generator-spring-boot-starter</artifactId>
            <version>${generator-spring-boot-starter.version}</version>
        </dependency>
    </dependencies>  
    <build> 
        <plugins>
            <plugin>
                <groupId>com.github.mengweijin</groupId>
                <artifactId>code-generator-maven-plugin</artifactId>
                <version>1.0.15</version>
                <configuration>
                    <parameters>
                        <outputPackage>com.github.mengweijin.quietly.system</outputPackage>
                        <tables>QTL_PROJECT</tables>
                        <tablePrefix>QTL_</tablePrefix>
                        <superEntityClass>com.github.mengweijin.quickboot.mybatis.entity.BaseEntity</superEntityClass>
                        <dbInfo>
                            <username>sa</username>
                            <password/>
                            <url>jdbc:h2:file:./h2/quickboot;DB_CLOSE_ON_EXIT=FALSE;MODE=MYSQL</url>
                        </dbInfo>
                    </parameters>
                </configuration>
            </plugin>
            <plugin> 
                <groupId>org.springframework.boot</groupId>  
                <artifactId>spring-boot-maven-plugin</artifactId>  
<!--                <version>${spring.boot.version}</version>  -->
                <executions> 
                    <execution> 
                        <goals> 
                            <!-- 将所有依赖包全部打到一个Jar包里面 -->  
                            <goal>repackage</goal> 
                        </goals> 
                    </execution> 
                </executions>  
                <configuration> 
                    <includeSystemScope>true</includeSystemScope> 
                </configuration> 
            </plugin> 
        </plugins>  
        <!-- 最终打出来的Jar的名称 -->  
        <!--<finalName>${project.artifactId}</finalName>--> 
    </build> 
</project>
